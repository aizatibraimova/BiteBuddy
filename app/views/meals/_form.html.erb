      <ul>
        <% meal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :food_id, style: "display: block" %>
    <%= form.collection_select :food_id, Food.all, :id, :name, prompt: "Select Food" %>
