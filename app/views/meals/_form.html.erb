<%= form_with(model: [@child, @meal], local: true) do |form| %>
  <% if @meal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>
      <ul>
        <% @meal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :food_id %>
    <%= form.select :food_id, options_for_select(Food.pluck(:name, :id)), { prompt: "Select a food" }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>
<% end %>
