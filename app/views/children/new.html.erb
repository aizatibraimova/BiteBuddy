<!-- app/views/children/new.html.erb -->
<h1>New Child</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <%= form_with(model: @child, local: true) do |form| %>
        <div class="card">
          <div class="card-header">New Child</div>
          <div class="card-body">
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control', placeholder: 'Enter child name' %>
            </div>
            <div class="form-group">
              <%= form.label :date_of_birth %>
              <%= form.date_field :date_of_birth, class: 'form-control', placeholder: 'Enter date of birth' %>
            </div>
            <div class="form-group">
              <%= form.label :gender %>
              <%= form.select :gender, [['Male', 'male'], ['Female', 'female']], {}, class: 'form-control' %>
            </div>
          </div>
          <div class="card-footer">
            <%= form.submit 'Create Child', class: 'btn btn-primary' %>
            <%= link_to 'Back to Children', children_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
