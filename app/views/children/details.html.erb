<h1><%= @child.name %>'s Details</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= render partial: 'shared/card', locals: {
        header: 'Meals', 
         items: @meals.map { |meal| { 
          name: "#{link_to(meal.food.name, child_meal_path(@child, meal))}
          <div>Notes: #{meal.notes}</div>
          <div>Date: #{meal.date.strftime('%Y-%m-%d')}</div>".html_safe,

          edit_path: edit_child_meal_path(@child, meal), 
          delete_path: child_meal_path(@child, meal)
        } }, 
        footer_link: new_child_meal_path(@child), 
        footer_text: 'Log New Meal'
      } 
    %>
    </div>
    <div class="col-md-6">
      <%= render partial: 'shared/card', locals: {
        header: 'Allergies', 
        items: @allergies.map { |allergy| { 
            name: "#{link_to(allergy.description, child_allergy_path(@child, allergy))}
            <div>Notes: #{allergy.notes}</div>
            <div>Severity: #{allergy.severity}</div>".html_safe,

            edit_path: edit_child_allergy_path(@child, allergy), 
            delete_path: child_allergy_path(@child, allergy)
          } }, 
        footer_link: new_child_allergy_path(@child), 
        footer_text: 'Log New Allergy'
      } 
    %>
    </div>
  </div>
</div>
