<h1>Children</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'shared/card', locals: {
          header: 'Children',
          items: @children.map { |child| item_card(child, child.name) },
          footer_link: new_child_path,
          footer_text: 'New Child'
        }
      %>
    </div>
  </div>
</div>
