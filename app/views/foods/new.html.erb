<!-- app/views/foods/new.html.erb -->
<h1>New Food</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <%= form_with(model: @food, local: true) do |form| %>
        <div class="card">
          <div class="card-header">New Food</div>
          <div class="card-body">
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control', placeholder: 'Enter food name' %>
            </div>
            <div class="form-group">
              <%= form.label :category %>
              <%= form.collection_select :category, food_categories, :to_s, :to_s, { prompt: 'Select category' }, { class: 'form-control' } %>
            </div>
          </div>
          <div class="card-footer">
            <%= form.submit 'Create Food', class: 'btn btn-primary' %>
            <%= link_to 'Back to Foods', foods_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
