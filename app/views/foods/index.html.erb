<h1>Foods</h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'shared/card', locals: {
          header: 'Foods',
          items: @foods.map { |food| item_card(food, food.name) },
          footer_link: new_food_path,
          footer_text: 'New Food'
        }
      %>
      <%= paginate @foods %>
    </div>
  </div>
</div>
