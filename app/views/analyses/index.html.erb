<%= render 'shared/breadcrumbs' %>

<h1>Analyses for <%= @child.name %></h1>

<% @analyses.each do |analysis| %>
  <div class="analysis">
    <h2>Analysis on <%= analysis.date %></h2>
    <p><strong>Meal:</strong> <%= analysis.meal.name %></p>
    <p><strong>Allergy:</strong> <%= analysis.allergy.name %></p>
    <p><strong>Findings:</strong> <%= analysis.findings %></p>
    <p><strong>Recommendations:</strong> <%= analysis.recommendations %></p>
  </div>
<% end %>

<%= link_to 'New Analysis', new_child_analysis_path(@child), class: 'btn btn-primary' %>
