<!-- app/views/analyses/new.html.erb -->
<%= form_with url: child_analyses_path(@child), method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :start_date, "Start Date" %>
    <%= form.date_field :start_date, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date, "End Date" %>
    <%= form.date_field :end_date, required: true, class: "form-control" %>
  </div>

  <%= form.submit "Analyze Data", class: "btn btn-primary" %>
<% end %>

<% if @analysis_result.present? %>
  <div class="analysis-result mt-4">
    <h3>Analysis Result:</h3>
    <p><%= @analysis_result %></p>
  </div>
<% end %>
